<div class="user-card">
  <div class="img-plch"></div>
  <div class="user-detls">
    <h2><%= @single_user.name %></h2> 
    <span>Number Of Posts: <%= @single_user.posts_counter %></span>
  </div>
</div>

<div>
  <% @user_posts.each do |post| %>
    <div class="user-post-blck">
      <a class="post-card box" href="<%= post_path(post)%>">
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
        <span>
          Comments: <%= post.comments_counter %>
          Likes: <%= post.likes_counter %>
        </span>
      </a>
      <div class="post-cmnts-block box">
        <% post.latest_comments.each do |comment| %>
          <span><%= comment.author.name %>: <%= comment.text%></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<a href="#" class="btn">Next page</a>



